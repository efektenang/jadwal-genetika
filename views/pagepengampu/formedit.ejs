<div class="row">
    <div class="col">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary"><%- title %> </h6>
            </div>
            <div class="card-body">
                <form action="/updatepengampu/<%- id %>" method="post">
                    <div class="mb-3">
                        <label for="id_mk" class="form-label">Mata Kuliah</label>
                        <select class="form-select" id="id_mk" name="id_mk" aria-label="Default select example">
                            <option value="<%- rows[0].id_mk %>" selected><%- rows[0].nama_mk %></option>
                            <% matkul.forEach(mk => { %>
                                <option value="<%- mk.id %>"><%- mk.matkul %></option>
                            <% }) %> 
                          </select>
                    </div>
                    <div class="mb-3">
                        <label for="id_dosen" class="form-label">Nama Dosen</label>
                        <select class="form-select" id="id_dosen" name="id_dosen" aria-label="Default select example">
                            <option value="<%- rows[0].id_dosen %>"><%- rows[0].nama_dosen %></option>
                            <% dosen.forEach(dsn => { %>
                                <option value="<%- dsn.id %>"><%- dsn.matkul %></option>
                            <% }) %> 
                          </select>
                    </div>
                    <div class="mb-3">
                        <label for="kelas" class="form-label">Kelas</label>  
                        <input type="text" value="<%- rows[0].kelas %>" class="form-control" id="kelas" name="kelas" aria-describedby="no_ruangHelp"  placeholder="cth. A1">
                    </div>
                    <div class="mb-3">
                        <label for="tahun_akademik" class="form-label">Tahun Akademik</label>  
                        <input type="text" value="<%- rows[0].tahun_akademik %>" class="form-control" id="tahun_akademik" name="tahun_akademik" aria-describedby="no_ruangHelp" placeholder="cth. 2022/2023">
                    </div>
                    <button class="btn btn-success" type="submit"> Simpan Data </button>
                </form>
            </div>
        </div>
    </div>
</div>