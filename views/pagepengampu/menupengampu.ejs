<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary"><%- title %> </h6>
    </div>
    
    <a href="/formpengampu" class="btn btn-primary btn-icon-split" style="width: 220px; margin: 20px 0 0 20px;">                
        <span class="text">Tambah Data Pengampu</span>
    </a>

    <div class="card-body">
<!-- 
        <div class="mb-3">
            <label for="semester_tipe" class="form-label">Semester</label>
            <select onchange="change_filter_pengampu()" class="form-select" id="semester_tipe" name="semester_tipe" aria-label="Default select example">
                <option value="0">Genap</option>
                <option value="1">Ganjil</option>
            </select>
        </div> -->
    
        <div class="mb-3">
            <label for="tahun_akademik" class="form-label">Tahun Akademik</label>  
            <select onchange="change_filter_pengampu()" class="form-select" id="tahun_akademik" name="tahun_akademik" aria-label="Default select example">
                <option value="2020-2021" <%- tahun_akademik === '2020-2021' ? 'selected' : '' %>>2020-2021</option>
                <option value="2021-2022" <%- tahun_akademik === '2021-2022' ? 'selected' : '' %>>2021-2022</option>
                <option value="2022-2023" <%- tahun_akademik === '2022-2023' ? 'selected' : '' %>>2022-2023</option>
                <option value="2023-2024" <%- tahun_akademik === '2023-2024' ? 'selected' : '' %>>2023-2024</option>
              </select>
        </div>
        
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>No.</th>
                        <th>Mata Kuliah</th>
                        <th>Nama Dosen Pengampu</th>
                        <th>Kelas</th>
                        <th>Tahun Akademik</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>No.</th>
                        <th>Mata Kuliah</th>
                        <th>Nama Dosen Pengampu</th>
                        <th>Kelas</th>
                        <th>Tahun Akademik</th>
                        <th>Action</th>
                    </tr>
                </tfoot>
                <tbody>
                    <% let no = 1; %> 
                    <% pengampu.forEach(pgp => { %>
                        <tr>
                            <td><%= no++ %> </td>
                            <td><%- pgp.nama_mk %> </td>
                            <td><%- pgp.nama_dosen %> </td>
                            <td><%- pgp.kelas %></td>
                            <td><%- pgp.tahun_akademik %></td>
                            <td width="12%">
                                <a href="/editpengampu/<%= pgp.id %> " class="btn btn-warning btn-circle btn-sm">
                                    <i class="fas fa-edit" title="Edit"></i>
                                </a>
                                <form action="/deletepengampu/<%= pgp.id%>?_method=DELETE" method="post"  style="display: inline;">
                                    <button type="submit" class="btn btn-danger btn-circle btn-sm"><i class="fas fa-trash"></i></button>
                                </form>
                            </td>
                        </tr>                             
                    <% }) %>
                </tbody>
            </table>
        </div>

    </div>
</div>