<div class="row">
    <div class="col">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary"><%- title %> </h6>
            </div>
            <div class="card-body">
                <form action="/updatewaktu/<%- id %> " method="post">
                    <div class="mb-3">
                        <label for="range_waktu" class="form-label">Range Waktu Belajar</label>  
                        <input type="text" value="<%- waktu.range_waktu %> " class="form-control" id="range_waktu" name="range_waktu" aria-describedby="range_waktuHelp" placeholder="cth. 00.00-00.00" autofocus>
                    </div>
                    <button class="btn btn-success" type="submit"> Simpan Perubahan </button>
                </form>
            </div>
        </div>
    </div>
</div>