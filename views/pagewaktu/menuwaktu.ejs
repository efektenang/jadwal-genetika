<div class="container-fluid py-4">
    <div class="row">
        <div class="col-lg-12">
            <div class="row">
                <div class="col-12">
                    <div class="card mb-4">
                        <div class="card-header">
                            <h5>Tabel Range Waktu Kuliah</h5>
                        </div>
                        <button data-bs-toggle="modal" data-bs-target="#tambahWaktuModal" class="btn btn-icon btn-3 btn-primary" type="button" style="width: 200px; margin: 20px 0 0 20px;">
                            <span class="btn-inner--icon"><i class="ni ni-fat-add"></i></span>
                            <span class="btn-inner--text">Tambah Range Waktu</span>
                        </button>
                        <div class="card-body px-0 pt-0 pb-2">
                            <div class="table-responsive p-0">
                                <table class="table align-items-center mb-0" id="datatable-basic">
                                    <thead>
                                        <tr>
                                            <th>No.</th>
                                            <th>Range Waktu</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tfoot>
                                        <tr>
                                            <th>No.</th>
                                            <th>Range Waktu</th>
                                            <th>Action</th>
                                        </tr>
                                    </tfoot>
                                    <tbody>
                                        <% let no = 1; %> 
                                        <% waktu.forEach(tbl => { %>
                                            <tr>
                                                <td><%= no++ %> </td>
                                                <td><%- tbl.range_waktu %> </td>
                                                <td width="12%">
                                                    <button data-bs-toggle="modal" data-bs-target="#editWaktuModal" class="btn bg-gradient-warning btn-icon">
                                                        <i class="fas fa-edit" title="edit"></i>
                                                    </button>
                                                    <form action="/deletewaktu/<%= tbl.id%>?_method=DELETE" method="post"  style="display: inline;">
                                                        <!-- <button type="submit" class="btn btn-danger btn-circle btn-sm"><i class="fas fa-trash"></i></button> -->
                                                        <button class="btn bg-gradient-danger btn-icon" onclick="argon.showSwal('warning-message-and-cancel')"><i class="fas fa-trash"></i></button>
                                                    </form>
                                                </td>
                                            </tr>                             
                                        <% }) %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- add modal -->
<div class="modal fade" id="tambahWaktuModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalSignTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-md" role="document">
      <div class="modal-content">
        <div class="modal-body p-0">
          <div class="card card-plain">
            <div class="card-header pb-0 text-left">
                <h3 class="font-weight-bolder text-primary text-gradient">Tambah Mata Kuliah Baru</h3>
                <p class="mb-0">Pastikan terisi dengan benar</p>
            </div>
            <div class="card-body pb-3">
              <form action="/insertwaktu" method="post" role="form text-left">
                <div class="mb-3">
                    <label for="range_waktu" class="form-label">Range Waktu Belajar</label>  
                    <input type="text" class="form-control" id="range_waktu" name="range_waktu" aria-describedby="range_waktuHelp" placeholder="cth. 00.00-00.00" autofocus>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn bg-gradient-secondary" data-bs-dismiss="modal">Close</button>
                  <button type="submit" class="btn bg-gradient-primary">Tambahkan</button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<!-- close add modal -->

<!-- edit modal -->
<div class="modal fade" id="editWaktuModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalSignTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-md" role="document">
      <div class="modal-content">
        <div class="modal-body p-0">
          <div class="card card-plain">
            <div class="card-header pb-0 text-left">
                <h3 class="font-weight-bolder text-primary text-gradient">Tambah Mata Kuliah Baru</h3>
                <p class="mb-0">Pastikan terisi dengan benar</p>
            </div>
            <div class="card-body pb-3">
              <form action="/updatewaktu/<%- //id %>" method="post" role="form text-left">
                <div class="mb-3">
                    <label for="range_waktu" class="form-label">Range Waktu Belajar</label>  
                    <input value="<%- waktu.range_waktu %>" type="text" class="form-control" id="range_waktu" name="range_waktu" aria-describedby="range_waktuHelp" placeholder="cth. 00.00-00.00" autofocus>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn bg-gradient-secondary" data-bs-dismiss="modal">Close</button>
                  <button type="submit" class="btn bg-gradient-primary">Tambahkan</button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<!-- close edit modal -->