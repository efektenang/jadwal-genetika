<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Tabel Jadwal Kuliah</h6>
    </div>

    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>No.</th>
                        <th>Hari</th>
                        <th>Sesi</th>
                        <th>Jam Kuliah</th>
                        <th>Mata Kuliah</th>
                        <th>Sks</th>
                        <th>Semester</th>
                        <th>Kelas</th>
                        <th>Dosen</th>
                        <th>Ruangan</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>No.</th>
                        <th>Hari</th>
                        <th>Sesi</th>
                        <th>Jam Kuliah</th>
                        <th>Mata Kuliah</th>
                        <th>Sks</th>
                        <th>Semester</th>
                        <th>Kelas</th>
                        <th>Dosen</th>
                        <th>Ruangan</th>
                    </tr>
                </tfoot>
                <tbody>
                    <% let no = 1; %> 
                    <% result.forEach(res => { %>
                        <tr>
                            <td><%= no++ %> </td>
                            <td><%- res.hari %> </td>
                            <td><%- res.sesi %></td>
                            <td><%- res.jam_kuliah %></td>
                            <td><%- res.nama_mk %></td>
                            <td><%- res.sks %></td>
                            <td><%- res.semester %></td>
                            <td><%- res.kelas %></td>
                            <td><%- res.dosen %></td>
                            <td><%- res.ruang %></td>
                        </tr>                             
                    <% }) %>
                </tbody>
            </table>
        </div>

    </div>
</div>