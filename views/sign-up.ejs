<div class="page-header min-vh-100" style="background-image: url('https://raw.githubusercontent.com/creativetimofficial/public-assets/master/argon-dashboard-pro/assets/img/signup-basic.jpg');">
  <span class="mask bg-gradient-dark opacity-6"></span>
  <div class="container">
    <div class="row justify-content-center">
      <div class="col col-md-7">
        <div class="card z-index-0">
          <div class="card-header text-center pt-4">
            <h4>Tambah User Baru</h4>
            <% if (typeof errors != 'undefined') { %>
                <h4 class="text-danger small font-weight-bold"><%= errors %></h4>
            <% } %>
            <% if (message.length !== 0) { %>
                <h4 class="text-danger small font-weight-bold"><%= message %></h4>
            <% } %>
          </div>
          <div class="card-body">
            <form role="form" class="user" action="/userprocess" method="post">
              <div class="row">
                <div class="col">
                  <label>User Name</label>
                  <input class="form-control" name="name" type="text" placeholder="cth. John Doe" />
                </div>
              </div>
              <div class="row mt-3">
                <div class="col">
                  <label>Program Studi</label>
                  <input class="form-control" name="prodi" type="text" placeholder="cth. sistem-informasi" />
                </div>
              </div>
              <div class="row mt-3">
                <div class="col">
                  <label>Email Address</label>
                  <input class="form-control" name="email" type="email" placeholder="cth. example@email.com" />
                </div>
              </div>
              <div class="row mt-3">
                <div class="col">
                  <label>Role</label>
                  <select class="form-select" name="role" aria-label="Default select example">
                      <option value="user" selected>Biro</option>
                      <option value="prodi">Program Studi</option>
                    </select>
                </div>
              </div>
              <div class="row mt-3">
                <div class="col-12 col-sm-6">
                  <label>Password</label>
                  <input class="form-control" name="password" type="password" placeholder="******" />
                </div>
                <div class="col-12 col-sm-6 mt-3 mt-sm-0">
                  <label>Repeat Password</label>
                  <input class="form-control" name="confPassword" type="password" placeholder="******" />
                </div>
              </div>
              <div class="card-footer text-center">
                <button type="submit" class="btn bg-gradient-info w-100 my-4 mb-2">Sign up</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>